@using BandWeb.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "ArtistForm";

}

<h2>Add a new Artist</h2>

<form asp-action="Post" enctype="multipart/form-data" method="post" class="form-horizontal">
    <fieldset>
        <legend></legend>
        <div class="form-group">
            <label class="control-label col-sm-3" for="nameArtist">Artist Name: </label>
            <div class="col-sm-10 input-breed">
                <input class="form-control" type="text" id="nameArtist" name="nameArtist" value="" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3" for="descriptionArtist">Artist Description: </label>
            <div class="col-sm-10 input-breed">
                <input class="form-control" type="text" id="descriptionArtist" name="descriptionArtist" value="" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3" for="listenersArtist">Amount of Listeners: </label>
            <div class="col-sm-10 input-smal">
                <input class="form-control" type="text" id="listenersArtist" name="listenersArtist" value="" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3" for="image_pathArtist">Artist Picture: </label>
            <div class="col-sm-10 input-smal">
                <input type="file" id="image_pathArtist" name="image_pathArtist" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-3">&nbsp;</label>
            <div class="col-sm-10">
                <input type="submit" value="Add" class="btn btn-default" />
                <a asp-area="" asp-controller="Artist" asp-action="ArtistList" class="btn btn-default">Go back</a>
            </div>
        </div>
    </fieldset>
</form>