
@{
    ViewData["Title"] = "RegistrationSystem";
}

<h2>Registration</h2>
<br/>
<form asp-action="Registrate" method="post" class="form-horizontal">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-sm-2" for="username">Username: </label>
            <div class="col-sm-10 input-breed">
                <input class="form-control" type="text" id="username" name="username" value="" required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="email">Email: </label>
            <div class="col-sm-10 input-breed">
                <input class="form-control" type="text" id="email" name="email" value="" required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="password">Password: </label>
            <div class="col-sm-10 input-breed">
                <input class="form-control" type="password" id="password" name="password" value="" required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="streetname">Streetname: </label>
            <div class="col-sm-10 input-breed">
                <input class="form-control" type="text" id="streetname" name="streetname" value="" required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="housenumber">Housenumber: </label>
            <div class="col-sm-10 input-breed">
                <input class="form-control" type="text" id="housenumber" name="housenumber" value="" required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="city">City: </label>
            <div class="col-sm-10 input-breed">
                <input class="form-control" type="text" id="city" name="city" value="" required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">&nbsp;</label>
            <div class="col-sm-10">
                <input type="submit" value="Submit" class="submit" />
            </div>
        </div>
    </fieldset>
</form>